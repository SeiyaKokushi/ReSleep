<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kakudalab.kokushiseiya.resleep.ChooseActionActivity"
    tools:showIn="@layout/activity_choose_action"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exerciseButton"
            android:src="@drawable/exercise_icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#ffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eatButton"
            android:src="@drawable/eat_icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#ffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cafeButton"
            android:src="@drawable/cafe_icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alcoholButton"
            android:src="@drawable/alcohol_icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#ffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabaccoButton"
            android:src="@drawable/tabacco_icon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#ffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/napButton"
            android:src="@drawable/nap_icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bathButton"
            android:src="@drawable/bath_icon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#ffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nothingButton"
            android:src="@drawable/noting_icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#ffffff" />
    </LinearLayout>
</LinearLayout>
